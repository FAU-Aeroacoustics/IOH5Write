export HDF5_DIR=/opt/hdf5/hdf5-1.10.5/build/
export SYSTEMOPENMPI=~/OpenFOAM/ThirdParty-2.3.1/openmpi-1.6.5/

sinclude $(GENERAL_RULES)/mplib$(WM_MPLIB)
sinclude $(RULES)/mplib$(WM_MPLIB)

H5FLAGS  = -D_LARGEFILE_SOURCE -D_LARGEFILE64_SOURCE -D_BSD_SOURCE -fPIC
H5INC    = -I$(HDF5_DIR)/include
H5LIBS   = -L$(HDF5_DIR)/lib -lhdf5_hl -lhdf5 -fPIC -lz -ldl -lrt -lm \
           -Wl,-rpath -Wl,$(HDF5_DIR)/lib

EXE_INC = -DWRITE_SP \
    $(PFLAGS) $(PINC) \
    $(H5FLAGS) $(H5INC) \
    -I$(LIB_SRC)/lagrangian/basic/lnInclude \
    -I$(LIB_SRC)/lagrangian/intermediate/lnInclude \
    -I$(LIB_SRC)/meshTools/lnInclude \
    -I$(LIB_SRC)/regionModels/regionModel/lnInclude \
    -I$(LIB_SRC)/regionModels/surfaceFilmModels/lnInclude \
    -I$(LIB_SRC)/finiteVolume/lnInclude

LIB_LIBS = $(PLIBS) \
    $(H5LIBS) \
    -llagrangian \
    -llagrangianIntermediate \
    -lregionModels \
    -lsurfaceFilmModels

